@model AuthSignupForm

@{
	ViewBag.Title = "Přihlašování";
}

@using(Html.BeginForm())
{
    <div class="form-container mx-auto" style="max-width: 500px;">
        <h2>Přihlašení</h2>
        <p class="text-danger">
            @ViewBag.Error
        </p>
        <div class="form-group mx-auto">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mx-auto">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Heslo" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mx-auto">
            @Html.LabelFor(m => m.ConfPassword)
            @Html.PasswordFor(m => m.ConfPassword, new { @class = "form-control", placeholder = "Heslo znovu" })
            @Html.ValidationMessageFor(m => m.ConfPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mx-auto">
            @Html.LabelFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Jméno" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mx-auto">
			@Html.LabelFor(m => m.LastName)
			@Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Přijmení" })
			@Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>  
        
        <div class="form-group mx-auto">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group mt-3 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
    </div>  
}
